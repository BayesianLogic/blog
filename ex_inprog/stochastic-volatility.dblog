 
fixed Matrix[2,2] Q = [1, 0; 0, 1];
fixed Matrix[1,2] mu0 = [0, 0]; 
random Matrix[2,1] state(Timestep t) {
	if t=@0 then ~ MultivarGaussian(2, mu0, Q)
	else ~ MultivarGaussian(2, state(t-1), Q)
};

fixed Matrix[1,2] C = [1, 0];
fixed Matrix[2,2] R = Q;
random Real location(Timestep t) 
~ Gaussian(C * state(t), R);
